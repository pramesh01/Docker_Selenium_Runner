pipeline{
    agent any
    stages{
        stage('Start Grid in Background'){
            steps{
                bat "docker-compose -f grid.yaml up -d"
            }

        }

        stage('Automation script execution'){
            steps{
                bat "docker-compose -f test_suite.yaml up"
            }
        }
    }
    post {
        always {
            bat "docker-compose -f grid.yaml down"
            bat "docker-compose -f test_suite.yaml down"
            archiveArtifacts artifacts: "C:/Users/prame/DockerWorkspace/06-Jenkins_CICD_Pipeline/06-runner-approach1/output/vendorportal/emailable-report.html", followSymlinks: false
        }
    }


}